<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_user_header"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        style="@style/marginAppRL"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/login_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入账号"
            android:paddingLeft="90dp"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/login_user_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="账号"
            android:textColor="#353535"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/marginAppRL"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入密码"
            android:paddingLeft="90dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#DDDDDD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/login_password"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="密码"
            android:textColor="#353535"
            android:textSize="16sp" />

        <ToggleButton
            android:id="@+id/login_btn_password"
            style="@style/MyToggleButton"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:checked="true"
            android:textOff=""
            android:layout_marginRight="8dp"
            android:textOn=""
            />
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn_land"
        style="@style/marginAppRL"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_enable_green"
        android:enabled="false"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_tv_register"
            style="@style/marginAppRL"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:enabled="false"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="注册"
            android:layout_alignParentRight="true"
            android:textColor="#353535"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>